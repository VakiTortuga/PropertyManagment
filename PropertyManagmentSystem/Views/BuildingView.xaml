<UserControl x:Class="PropertyManagmentSystem.Views.BuildingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:enums="clr-namespace:PropertyManagmentSystem.Enums"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="FinishingTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:FinishingType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <!-- Основной контент со скроллом -->
    <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="8">
        <!--Содержимое скролла-->
        <DockPanel>
            <!-- Левая колонка: Здания -->
            <StackPanel Margin="0,0,6,0" Width="400" MinWidth="400">
                <!--Подпись-->
                <TextBlock Text="Все здания" FontWeight="Bold" FontSize="14" Margin="0,0,0,6"/>
                <!-- Список зданий -->
                <ListBox ItemsSource="{Binding Buildings}"
                         SelectedItem="{Binding SelectedBuilding}"
                         DisplayMemberPath="Address"
                         Height="160" Margin="0,0,0,8"/>
                <!-- Информация о выбранном здании -->
                <Border DockPanel.Dock="Top" Background="#E8F4F8" BorderBrush="#4A90E2" BorderThickness="1" Padding="12" Margin="0,0,0,8" CornerRadius="3">
                    <StackPanel>
                        <TextBlock Text="Выбранное здание:" FontWeight="Bold" Margin="0,0,0,6"/>
                        <DockPanel>
                            <StackPanel>
                                <TextBlock Text="Адрес: " FontWeight="SemiBold" Width="80"/>
                                <TextBlock Text="Район: " FontWeight="SemiBold" Width="80"/>
                                <TextBlock Text="Этажей: " FontWeight="SemiBold" Width="80"/>
                                <TextBlock Text="Телефон: " FontWeight="SemiBold" Width="80"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedBuilding.Address, FallbackValue='Не выбрано'}" Width="150" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding SelectedBuilding.District}" Width="150"/>
                                <TextBlock Text="{Binding SelectedBuilding.FloorsCount}" Width="150"/>
                                <TextBlock Text="{Binding SelectedBuilding.CommandantPhone}" Width="150"/>
                            </StackPanel>
                        </DockPanel>
                    </StackPanel>
                </Border>
                <!-- Блок статистики -->
                <GroupBox Header="Статистика здания" Margin="0,0,0,0">
                    <StackPanel Margin="8">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Всего комнат: " Width="120" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding TotalRooms}" Foreground="#1F4788"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Свободных комнат: " Width="120" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding AvailableRooms}" Foreground="#008000"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Заполняемость: " Width="120" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding OccupancyRate}" Foreground="#FF6B00"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <!--Создание, обновление, удаления здания-->
                <GroupBox Header="Добавить новое здание" Margin="0,0,0,8">
                    <StackPanel Margin="8">
                        <TextBlock Text="Район:" Margin="0,0,0,2" FontSize="12"/>
                        <TextBox Text="{Binding NewBuildingDistrict, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" Padding="5" Height="28"/>

                        <TextBlock Text="Адрес:" Margin="0,0,0,2" FontSize="12"/>
                        <TextBox Text="{Binding NewBuildingAddress, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" Padding="5" Height="28"/>

                        <TextBlock Text="Количество этажей:" Margin="0,0,0,2" FontSize="12"/>
                        <TextBox Text="{Binding NewBuildingFloorsCount, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" Padding="5" Height="28"/>

                        <TextBlock Text="Телефон коменданта:" Margin="0,0,0,2" FontSize="12"/>
                        <TextBox Text="{Binding NewBuildingCommandantPhone, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" Padding="5" Height="28"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="Добавить" Command="{Binding AddBuildingCommand}" Width="90" Margin="0,0,6,0" Padding="8"/>
                            <Button Content="Обновить" Command="{Binding UpdateBuildingCommand}" Width="90" Margin="0,0,6,0" Padding="8"/>
                            <Button Content="Удалить" Command="{Binding DeleteBuildingCommand}" Width="90" Padding="8"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            
            <!-- Правая колонка: Комнаты -->
            <StackPanel Margin="6,0,0,0" Width="400" MinWidth="400">
                <!-- Подпись -->
                <TextBlock Text="Комнаты в выбранном здании" FontWeight="Bold" FontSize="14" Margin="0,0,0,6"/>
                <!-- Список комнат -->
                <ListBox ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom}" Height="160" Margin="0,0,0,8">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RoomNumber, StringFormat='Комната {0}'}" Padding="4"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <!-- Информация о выбранной комнате -->
                <Border Background="#F0F8FF" BorderBrush="#4A90E2" BorderThickness="1" Padding="8" Margin="0,0,0,8" CornerRadius="2">
                    <StackPanel>
                        <TextBlock Text="Информация о выбранной комнате:" FontWeight="Bold" Margin="0,0,0,6" Foreground="#1F4788"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Номер: " FontWeight="SemiBold" Width="100"/>
                            <TextBlock Text="{Binding SelectedRoom.RoomNumber, FallbackValue='—'}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Площадь: " FontWeight="SemiBold" Width="100"/>
                            <TextBlock Text="{Binding SelectedRoom.Area, FallbackValue='—'}"/>
                            <TextBlock Text=" кв.м" Margin="2,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Этаж: " FontWeight="SemiBold" Width="100"/>
                            <TextBlock Text="{Binding SelectedRoom.FloorNumber, FallbackValue='—'}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Отделка: " FontWeight="SemiBold" Width="100"/>
                            <TextBlock Text="{Binding SelectedRoom.FinishingType, FallbackValue='—'}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="Телефон: " FontWeight="SemiBold" Width="100"/>
                            <TextBlock Text="{Binding SelectedRoom.HasPhone, FallbackValue='—'}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Статус: " FontWeight="SemiBold" Width="100"/>
                            <TextBlock Text="{Binding SelectedRoom.IsRented, FallbackValue='—'}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!-- Добавление новой комнаты -->
                <GroupBox Header="Добавить комнату в здание" Margin="0,0,0,8">
                    <StackPanel Margin="8">
                        <Border Background="#FFF8DC" BorderBrush="#FFD700" BorderThickness="1" Padding="8" Margin="0,0,0,8" CornerRadius="2">
                            <StackPanel>
                                <TextBlock Text="Добавление в здание:" FontWeight="Bold" FontSize="11"/>
                                <TextBlock Text="{Binding SelectedBuilding.Address, FallbackValue='Выберите здание слева'}" Foreground="#8B6914" TextWrapping="Wrap" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Номер комнаты:" Margin="0,0,0,2" FontSize="12"/>
                        <TextBox Text="{Binding NewRoomNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" Padding="5" Height="28"/>

                        <TextBlock Text="Площадь (кв.м):" Margin="0,0,0,2" FontSize="12"/>
                        <TextBox Text="{Binding NewRoomArea, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" Padding="5" Height="28"/>

                        <TextBlock Text="Номер этажа:" Margin="0,0,0,2" FontSize="12"/>
                        <TextBox Text="{Binding NewRoomFloor, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6" Padding="5" Height="28"/>

                        <TextBlock Text="Тип отделки:" Margin="0,0,0,2" FontSize="12"/>
                        <ComboBox ItemsSource="{Binding Source={StaticResource FinishingTypes}}" SelectedItem="{Binding NewRoomFinishingType}" Margin="0,0,0,6" Padding="5" Height="28"/>

                        <CheckBox IsChecked="{Binding NewRoomHasPhone}" Content="Есть телефон" Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="Добавить" Command="{Binding AddRoomCommand}" Width="90" Margin="0,0,6,0" Padding="8"/>
                            <Button Content="Обновить" Command="{Binding UpdateRoomCommand}" Width="90" Margin="0,0,6,0" Padding="8"/>
                            <Button Content="Удалить" Command="{Binding DeleteRoomCommand}" Width="90" Padding="8"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </DockPanel>
    </ScrollViewer>
</UserControl>