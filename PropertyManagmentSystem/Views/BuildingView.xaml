<UserControl x:Class="PropertyManagmentSystem.Views.BuildingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:enums="clr-namespace:PropertyManagmentSystem.Enums"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="FinishingTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:FinishingType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Управление недвижимостью" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левый блок: Здания -->
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Padding="8" CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="Здания" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>

                    <ListBox ItemsSource="{Binding Buildings}" 
                             SelectedItem="{Binding SelectedBuilding}" 
                             Height="250"
                             BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="4">
                                    <TextBlock Text="{Binding Address}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding District, StringFormat=Район: {0}}" Foreground="Gray" FontSize="11"/>
                                    <TextBlock Text="{Binding FloorsCount, StringFormat={}Этажей: {0}}" Foreground="Gray" FontSize="11"/>
                                    <TextBlock Text="{Binding CommandantPhone, StringFormat=Тел: {0}}" Foreground="DarkBlue" FontSize="11"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <GroupBox Header="Управление зданием" Margin="0,12,0,0">
                        <StackPanel Margin="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Район:" Margin="4" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewBuildingDistrict}" Margin="4"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Адрес:" Margin="4" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewBuildingAddress}" Margin="4"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Этажей:" Margin="4" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewBuildingFloorsCount}" Width="60" Margin="4" HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Тел. коменданта:" Margin="4" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding NewBuildingCommandantPhone}" Margin="4"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Center">
                                <Button Content="Добавить" Command="{Binding AddBuildingCommand}" Width="100" Height="28" Margin="4"/>
                                <Button Content="Обновить" Command="{Binding UpdateBuildingCommand}" Width="100" Height="28" Margin="4"
                                        IsEnabled="{Binding SelectedBuilding, Converter={StaticResource BoolToVis}}"/>
                                <Button Content="Удалить" Command="{Binding DeleteBuildingCommand}" Width="100" Height="28" Margin="4"
                                        IsEnabled="{Binding SelectedBuilding, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Правый блок: Комнаты -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхний блок: Комнаты -->
                <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="8" CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                 Text="{Binding SelectedBuilding.Address, StringFormat=Комнаты в здании: {0}}" 
                                 FontWeight="Bold" 
                                 Margin="0,0,0,8"
                                 Visibility="{Binding SelectedBuilding, Converter={StaticResource BoolToVis}}"/>

                        <DataGrid Grid.Row="1" 
                                ItemsSource="{Binding Rooms}" 
                                SelectedItem="{Binding SelectedRoom}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                IsReadOnly="True"
                                Margin="0,4,0,0"
                                Height="250">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="№" Binding="{Binding RoomNumber}" Width="60"/>
                                <DataGridTextColumn Header="Этаж" Binding="{Binding FloorNumber}" Width="60"/>
                                <DataGridTextColumn Header="Площадь" Binding="{Binding Area, StringFormat={}F2 м²}" Width="80"/>
                                <DataGridTextColumn Header="Отделка" Binding="{Binding FinishingType}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Телефон" Binding="{Binding HasPhone}" Width="70"/>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Нижний блок: Добавление комнаты и статистика -->
                <Grid Grid.Row="1" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Форма добавления комнаты -->
                    <GroupBox Grid.Column="0" Header="Добавить/редактировать комнату" Margin="0,0,8,0">
                        <StackPanel Margin="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Номер комнаты:" Margin="4" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewRoomNumber}" Width="100" Margin="4" HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Площадь (м²):" Margin="12,4,4,4" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding NewRoomArea}" Width="80" Margin="4" HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Этаж:" Margin="4" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewRoomFloor}" Width="60" Margin="4" HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="1" Grid.Column="2" Text="Отделка:" Margin="12,4,4,4" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="1" Grid.Column="3" 
                                        ItemsSource="{Binding Source={StaticResource FinishingTypes}}" 
                                        SelectedItem="{Binding NewRoomFinishingType}" 
                                        Width="140" 
                                        Margin="4" 
                                        HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Телефон:" Margin="4" VerticalAlignment="Center"/>
                                <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding NewRoomHasPhone}" Margin="4" HorizontalAlignment="Left"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Center">
                                <Button Content="Добавить комнату" Command="{Binding AddRoomCommand}" Width="120" Height="28" Margin="4"/>
                                <Button Content="Обновить данные" Command="{Binding UpdateRoomCommand}" Width="120" Height="28" Margin="4"
                                        IsEnabled="{Binding SelectedRoom, Converter={StaticResource BoolToVis}}"/>
                                <Button Content="Удалить комнату" Command="{Binding DeleteRoomCommand}" Width="120" Height="28" Margin="4"
                                        IsEnabled="{Binding SelectedRoom, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Статистика -->
                    <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Padding="12" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Статистика здания" FontWeight="Bold" Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding TotalRooms, StringFormat=Всего комнат: {0}}" Margin="0,4"/>
                                <TextBlock Grid.Row="1" Text="{Binding AvailableRooms, StringFormat=Свободно: {0}}" Margin="0,4" Foreground="Green"/>
                                <TextBlock Grid.Row="2" Text="{Binding OccupancyRate, StringFormat=Заполняемость: {0:P0}}" Margin="0,4"/>

                                <ProgressBar Grid.Row="3" 
                                           Value="{Binding OccupancyRate}" 
                                           Maximum="1" 
                                           Height="20" 
                                           Margin="0,8,0,0">
                                    <ProgressBar.Style>
                                        <Style TargetType="ProgressBar">
                                            <Setter Property="Foreground" Value="LightBlue"/>
                                            <Style.Triggers>
                                                <Trigger Property="Value" Value="1">
                                                    <Setter Property="Foreground" Value="Orange"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>
                            </Grid>

                            <Button Content="Обновить статистику" 
                                    Command="{Binding LoadStatisticsCommand}" 
                                    Margin="0,12,0,0" 
                                    Height="28"
                                    IsEnabled="{Binding SelectedBuilding, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>