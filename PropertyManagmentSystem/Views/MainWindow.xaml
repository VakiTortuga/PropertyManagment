<Window x:Class="PropertyManagmentSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropertyManagmentSystem.Views"
        xmlns:vms="clr-namespace:PropertyManagmentSystem.ViewModels"
        mc:Ignorable="d"
        Title="Система управления недвижимостью" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:BuildingViewModel}">
            <local:BuildingView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vms:ContractorViewModel}">
            <local:ContractorView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vms:AgreementViewModel}">
            <local:AgreementView />
        </DataTemplate>
    </Window.Resources>
    

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Меню навигации + контрол времени -->
        <Border Grid.Row="0" Background="#2E3A59" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Навигация слева -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Здания" 
                            Command="{Binding ShowBuildingsCommand}"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="15,10"
                            FontSize="14"
                            Margin="5,0"/>

                    <Button Content="Арендаторы" 
                            Command="{Binding ShowContractorsCommand}"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="15,10"
                            FontSize="14"
                            Margin="5,0"/>

                    <Button Content="Договоры" 
                            Command="{Binding ShowAgreementsCommand}"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="15,10"
                            FontSize="14"
                            Margin="5,0"/>
                </StackPanel>

                <!-- Контрол времени справа -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock x:Name="CurrentTimeText"
                               Foreground="White"
                               FontSize="13"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Button Content="+1 день" Click="AdvanceDay_Click"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="1"
                            Padding="8,6"
                            Margin="0,0,5,0"/>
                    <Button Content="+1 месяц" Click="AdvanceMonth_Click"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="1"
                            Padding="8,6"
                            Margin="0,0,5,0"/>
                    <Button Content="Установить сейчас" Click="ResetToNow_Click"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="1"
                            Padding="8,6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Контентная область -->
        <ContentControl Grid.Row="1" 
                        Content="{Binding CurrentViewModel}"
                        Margin="10"/>
    </Grid>
</Window>